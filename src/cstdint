#pragma once

namespace std {
using int8_t = signed char;
using uint8_t = unsigned char;
using int16_t = signed short;
using uint16_t = unsigned short;
using int32_t = signed int;
using uint32_t = unsigned int;
using int64_t = signed long long;
using uint64_t = unsigned long long;

static_assert(1 == sizeof(int8_t), "int8_t is not 1byte");
static_assert(1 == sizeof(uint8_t), "uint8_t is not 1byte");
static_assert(2 == sizeof(int16_t), "int16_t is not 2byte");
static_assert(2 == sizeof(uint16_t), "uint16_t is not 2byte");
static_assert(4 == sizeof(int32_t), "int32_t is not 4byte");
static_assert(4 == sizeof(uint32_t), "uint32_t is not 4byte");
static_assert(8 == sizeof(int64_t), "int64_t is not 8byte");
static_assert(8 == sizeof(uint64_t), "uint64_t is not 8byte");
}  // namespace std